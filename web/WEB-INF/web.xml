    <servlet>
        <servlet-name>HeaderGoturmeDeyisme</servlet-name>
        <servlet-class>veri.HeaderGoturmeDeyisme</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Context_ile_File</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContextScope</servlet-name>
        <url-pattern>/ContextScope</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionScopeExample</servlet-name>
        <url-pattern>/SessionScopeExample</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadingSessionScope</servlet-name>
        <url-pattern>/ReadingSessionScope</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestAttributeExample</servlet-name>
        <url-pattern>/RequestAttributeExample</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>listener.ServletContextListenerImpl</listener-class>
    </listener>
    <listener>
        <listener-class>listener.ServletContextListenerImpl2</listener-class>
    </listener>
    <listener>
