        <servlet-class>servlet.Servlet_Context</servlet-class>
        <context-param>
            <param-name>website</param-name>
            <param-value>shahin.az</param-value>
        </context-param>
        <context-param>
            <param-name>emailaddress</param-name>
            <param-value>reshidshahin@gmail.com</param-value>
        </context-param>
    </servlet>
    <servlet>
        <servlet-name>Context_ile_File</servlet-name>
        <servlet-class>context_ile_file.Context_ile_File</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContextScope</servlet-name>
        <servlet-class>attribute.ContextScope</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionScopeExample</servlet-name>
        <servlet-class>attribute.SessionScopeExample</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadingSessionScope</servlet-name>
        <servlet-class>attribute.ReadingSessionScope</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestAttributeExample</servlet-name>
        <servlet-class>requestscope.RequestAttributeExample</servlet-class>
